{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Vite: Chrome Debug",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "name": "Vite: Attach to Chrome",
      "type": "pwa-chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "name": "Vite: Dev Server (Inspect)",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["--inspect=9229"],
      "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      }
    }
  ],
  "compounds": [
    {
      "name": "Vite: Full Stack Debug",
      "configurations": ["Vite: Dev Server (Inspect)", "Vite: Chrome Debug"]
    }
  ]
}
